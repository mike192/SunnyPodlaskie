<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l_weather_data_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <include
        android:id="@+id/inc_content"
        layout="@layout/part_weather_data_list_content" />

    <include
        android:id="@+id/inc_empty"
        layout="@layout/part_weather_data_list_empty" />

    <include
        android:id="@+id/inc_error"
        layout="@layout/part_weather_data_list_error" />

</FrameLayout>
