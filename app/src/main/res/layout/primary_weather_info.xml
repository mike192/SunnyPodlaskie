<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/weather_primary_detail_padding"
    android:paddingEnd="@dimen/weather_primary_detail_padding"
    android:paddingLeft="@dimen/weather_primary_detail_padding"
    android:paddingRight="@dimen/weather_primary_detail_padding"
    android:paddingStart="@dimen/weather_primary_detail_padding" >

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="0dp"/>

        <TextView
            android:id="@+id/city_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/weather_icon_detail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="BiaÅ‚ystok"/>

        <ImageView
            android:id="@+id/weather_icon_detail"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/art_01d"/>

        <TextView
            android:id="@+id/weather_description_detail"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondary_text"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintLeft_toLeftOf="@+id/weather_icon_detail"
            app:layout_constraintRight_toRightOf="@+id/weather_icon_detail"
            app:layout_constraintTop_toBottomOf="@+id/weather_icon_detail"
            tools:text="Rainy" />

    <TextView
        android:id="@+id/temperature_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="72sp"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weather_icon_detail"
        app:layout_constraintBottom_toBottomOf="@+id/weather_description_detail"
        app:layout_constraintHorizontal_bias="0.45"
        tools:text="23\u00b0"
        />


    </android.support.constraint.ConstraintLayout>
