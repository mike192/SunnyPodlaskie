<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.mosenko.sunnypodlaskie.mvp.weatherdatadetail.WeatherDataDetailFragment">

    <include
        android:id="@+id/WeatherDataDetailFragment_include_primary_info"
        layout="@layout/primary_weather_details_info"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight=".45" />

    <include
        android:id="@+id/WeatherDataDetailFragment_include_extra_info"
        layout="@layout/extra_weather_details_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".55" />
</LinearLayout>